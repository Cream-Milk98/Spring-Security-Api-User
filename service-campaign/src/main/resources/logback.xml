    <appender name="FILE-CONNECTION" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator class="com.viettel.campaign.web.rest.testconnection.ConnectionController"/>
        <sift>
            <appender class="ch.qos.logback.core.FileAppender">
                <file>logs/app-${threadName}.log</file>
                <layout class="ch.qos.logback.classic.PatternLayout">
                    <pattern>%d{HH:mm:ss:SSS} | %-5level | %logger{20} | %msg%n%rEx</pattern>
                </layout>
            </appender>
        </sift>
    </appender>

    <logger name="com.viettel" level="debug" additivity="false">
        <appender-ref ref="FILE-ROLLING"/>
    </logger>

    <logger name="com.viettel.campaign.web.rest.testconnection.ConnectionController" level="debug" additivity="false">
        <appender-ref ref="FILE-CONNECTION"/>
    </logger>

    <root level="error">
        <appender-ref ref="FILE-ROLLING"/>
        <appender-ref ref="FILE-CONNECTION"/>

    </root>

</configuration>